<body>
  <h1 class="box">Books</h1>
  <table>
      <div class="book-box">
       <p class="title-box">Title</p>
       <p class="body-box">Body</p>
       <p class="white-box"></p>
      </div>
    <div>
      <% @books.each do |book| %>
       <section class="book-text">
         <p class="title-item"><%= book.title %></p>
         <p class="body-item"><%= book.body %></p>
         <span class="action"><%= link_to "Show", book_path(book.id) %></span>
         <span class="action"><%= link_to "Edit", edit_book_path(book.id) %></span>
         <span class="action"><%= link_to "Destroy", book_path(book.id), method: :delete %></span>
       </section>
       <% end %>
    </table>

  </div>

  <h2 class="new-box">New book</h2>

  <% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラーが発生しました。
   <% @book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
   <% end %>

  <%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <div></div>
  <%= f.submit "Create Book" %>
  <% end %>

</body>


